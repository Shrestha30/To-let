<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="20dp"
    app:cardCornerRadius="10dp"
    android:padding="10dp"
    android:outlineAmbientShadowColor="#8000FFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/edittext_background">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/house_card_index"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1. "
                android:textColor="@color/black"/>
            <ImageView
                android:id="@+id/house_card_verified_img"
                android:layout_width="26dp"
                android:layout_height="20dp"
                android:src="@drawable/verifed"
                android:paddingLeft="3dp"
                android:paddingRight="3dp"/>
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/house_card_details_img"
                    android:layout_width="26dp"
                    android:layout_height="20dp"
                    android:layout_gravity="right"
                    android:paddingLeft="3dp"
                    android:paddingRight="3dp"
                    android:src="@drawable/details"/>
            </FrameLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingRight="5dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/black"
                android:text="Owner Name:"
                android:id="@+id/house_card_owner"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textColor="@color/black"
                android:text="House Name:"
                android:id="@+id/house_card_name"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>